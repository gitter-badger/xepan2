div.xepan-commerce-item-images(id='{$_name}')
  |   {$Content}
  |   {zoom3_image}
  img.zoomwrapper-img(id='zoom_03{$_name}', src='{firstimage}{/}', data-zoom-image='{$firstimage}')
  |   {/zoom3_image}
  .xshop-item-image-list(id='gal1{$_name}'  style="margin-top:30px;")
    | {rows}
    | {row}
    .xshop-item-image-block
        a.xshop-item-image-link.elevatezoom-gallery(style="float: left;",href='#{$id}', data-image='{$file}', data-zoom-image='{$file}')
            img(id='img_{$id}', src='{$thumb_url}', alt='{$img_alt}', title='{$img_title}')
    |  {/row}
    |  {/rows}
  script(type='text/javascript').
    $(window).load(function(){
    setTimeout(function() {
    $("#zoom_03{$_name}").elevateZoom({
    gallery:'gal1{$_name}',
    cursor: 'pointer',
    galleryActiveClass: 'active',
    imageCrossfade: true,
    constrainType:"height",
    constrainSize:274,
    containLensZoom: true,
    scrollZoom : true,
    responsive:true,
    });
    $("#zoom_03{$_name}").bind("click", function(e) {
    var ez =   $('#zoom_03{$_name}').data('elevateZoom');
    ez.closeAll(); //NEW: This function force hides the lens, tint and window
    $.fancybox(ez.getGalleryList({
    }));
    return false;
    });
    },0);
    });
